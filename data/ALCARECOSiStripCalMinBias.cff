# AlCaReco for track based calibration using min. bias events

  module ALCARECOSiStripCalMinBiasHLT = hltHighLevel from "HLTrigger/HLTfilters/data/hltHighLevel.cfi"
  replace ALCARECOSiStripCalMinBiasHLT.andOr = true # choose logical OR between Triggerbits
  replace ALCARECOSiStripCalMinBiasHLT.HLTPaths = {"HLT_MinBiasEcal", "HLT_MinBiasHcal", "HLT_MinBiasPixel"}

  module ALCARECOSiStripCalMinBias = CalibrationTrackSelector from "Calibration/TkAlCaRecoProducers/data/CalibrationTrackSelector.cfi"
	
    replace ALCARECOSiStripCalMinBias.applyBasicCuts = true
	replace ALCARECOSiStripCalMinBias.ptMin = 0.8 #GeV
	replace ALCARECOSiStripCalMinBias.etaMin = -3.5
	replace ALCARECOSiStripCalMinBias.etaMax = 3.5
	replace ALCARECOSiStripCalMinBias.nHitMin =  0

     sequence seqALCARECOSiStripCalMinBias = {ALCARECOSiStripCalMinBiasHLT & ALCARECOSiStripCalMinBias }  
#     sequence seqALCARECOSiStripCalMinBias = {ALCARECOSiStripCalMinBias }


